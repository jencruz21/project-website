<%- include('include/header') %>
<div class="row">
    <div class="col-sm-6 mobile-inputs">
        <hr>
        <h4 class="title">Customer</h4>
        <hr>
        <form action="/admin/api/customers" method="post" id="add_customer">
            <div class="form-group">
                <input type="text" name="cName" class="form-control form-txt-primary" placeholder="Customer Name">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <input type="text" name="cLocation" class="form-control form-txt-primary" placeholder="Location">
                </div>
                <div class="col-sm-6">
                    <input type="text" name="cNum" class="form-control form-txt-primary" placeholder="Phone #">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <input type="datetime-local" name="cDate" class="form-control form-txt-primary" placeholder="Date">
                </div>
                <div class="col-sm-6">
                    <input type="number" name="cCaban" class="form-control form-txt-primary" placeholder="Caban">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <input type="number" name="cPrice" class="form-control form-txt-primary" placeholder="Price">
                </div>
                <div class="col-sm-6">
                    <input type="number" name="cBal" class="form-control form-txt-primary" placeholder="Balance">
                </div>
               
            </div>
            <div class="row" style="margin-top: 1rem;margin-bottom: 1rem;">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                    </div>
                </div>
        </form>
    </div>
</div>  
<div class="card">
    <div class="card-header">
        <h5>Customer List</h5>
        <!-- <span>use class <code>table-dark</code> inside table element</span> -->
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                <li><i class="fa fa-window-maximize full-card"></i></li>
                <li><i class="fa fa-minus minimize-card"></i></li>
                <li><i class="fa fa-refresh reload-card"></i></li>
                <li><i class="fa fa-trash close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block table-border-style" style="overflow-y:scroll;height:500px;">
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Contact #</th>
                        <th>Date</th>
                        <th>Caban</th>
                        <th>Price</th>
                        <th>Balance</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < customers.length; i++) { %>
                    <tr>
                        <th scope="row"><%= i + 1 %></th>
                        <td><%= customers[i].c_name %></td>
                        <td><%= customers[i].c_location %></td>
                        <td><%= customers[i].c_cpNum %></td>
                        <td><%= customers[i].c_date %></td>
                        <td><%= customers[i].c_caban %></td>
                        <td><%= customers[i].c_price %></td>
                        <td><%= customers[i].c_bal %></td>
                        
                        <td>
                            <a class="btn border-shadow delete" data-id=<%= customers[i]._id%>>
                                <span class="text-gradient"><i class="fas fa-times" style="color: rgb(245, 5, 5);"></i></span>
                            </a>
                        </td>

                    </tr>
              <% } %>
                 
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('include/footer') %>